@import "~normalize.css/normalize.css"
json("theme.json")

@font-face
  font-family "Apple Kid"
  src url("~fonts/apple-kid.woff") format("woff")
  font-weight normal
  font-style normal

@font-face
  font-family "Year is 199X"
  src url("~fonts/year-is-199x.woff") format("woff")
  font-weight normal
  font-style normal

*, *:before, *:after
 box-sizing border-box

html, body
  bottom 0
  left 0
  overflow hidden
  position absolute
  right 0
  top 0

body
  background red-lightest
  cursor url("~images/cursor.svg"), default

  color black
  font-family font-sans-serif
  font-size text-regular
  font-smoothing antialiased
  font-variant-ligatures common-ligatures
  letter-spacing 0.5px
  line-height 1.3

  user-select none

main
  height 100%

header, section, aside, footer
  display flex
  flex-direction: column
  align-items: stretch
  flex-shrink: 0

blockquote
  margin 0.5em 0
  background blue-lightest
  border-left 4px solid blue-light
  padding 0 0.2em

h1, h2, h3, h4, h5
  font-family font-serif
  font-weight normal
  letter-spacing 2px
  line-height 0.7
  margin 0.2em 0

.slim-header
  margin 0

.sub-header
  line-height 0.9
  padding .3em 0

h1
  border-bottom 2px solid offwhite
  font-size 2em

h2
  font-size 1.5em
  border-bottom 1px solid black

h3
  font-size 1.5em

input
  font-family font-sans-serif
  border 2px solid gray-light
  padding 0 10px
  line-height 1.3

  &::placeholder
    color blue-light

  &:hover
    border-color blue-light

  &:focus
    border-color blue-base
    outline none

p
  line-height .94
  margin 0

  &:first-of-type
    margin-top 0

  & + p
    margin-top 0.3em

  & + h1, & + h2, & + h3
    margin-top 0.4em

a, .link
  color: black
  cursor: inherit
  text-decoration none

  border-bottom 1px solid #efefef

  &:hover
    background-color rgba(0, 0, 0, 0.1)

  &:active
    background-color rgba(0, 0, 0, 0.3)

  &.entry
    padding .1em .3em

.scanlines
  background-size 8px
  background-image repeating-linear-gradient(
    to bottom,
    transparent 0,
    transparent 1px,
    rgba(110,110,110,0.1) 1px,
    rgba(110,110,110,0.1) 2px)

  display block

  z-index 20
  position absolute
  top 0
  left 0

  width 100%
  height 100%

  pointer-events none

body:not(.dragging) [data-selectable]
  user-select text

::selection
  background: black
  color: teal-light

::-moz-selection
  background: black
  color: teal-light

.body::-webkit-scrollbar
  width: 14px

.body::-webkit-scrollbar-track
  background-color lighten(gray-lightest, 80%)
  background-image url("~images/dotted.png")
  background-size 2px
  background-repeat repeat

.body::-webkit-scrollbar-thumb
  background-image url("~images/dotted.png")
  background-color teal-light
  background-size 2px
  background-repeat repeat
  outline: 2px solid gray-base

.body::-webkit-scrollbar-corner
  background-image url("~images/dotted.png")
  background-color lighten(teal-light, 50%)
  background-size 2px
  background-repeat repeat
