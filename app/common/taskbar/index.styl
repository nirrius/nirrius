json("theme.json")

[data-component="taskbar"]
  line-height 1

  flex-direction row
  justify-content space-between

  position absolute
  bottom 0
  left 0

  width 100%

  padding 0 5px

  .tasks
    flex-direction row
    flex-wrap wrap
    flex-shrink 1
    align-items center

  .task-item
    display flex
    align-items center

    margin-bottom 5px

    .inner
      background-color green-light

      border 1px solid green-dark
      box-shadow rgba(0, 0, 0, 0.1) -2px 3px 0

      padding 4px 10px

      font-size text-small
      font-family font-serif

    &.focused .inner
      text-decoration underline

    &.minimized
      filter: grayscale(100%) !important
      text-decoration line-through

    &:hover .inner
      background-color lighten(green-light, 30%)
      border-color lighten(green-dark, 30%)

    &:active .inner
      background-color lighten(green-light, 10%)
      border-color lighten(green-dark, 10%)


  .task-item + .task-item::before
    display inline-block
    content ""
    width 10px
    border-top: 1px solid dark-accent


  .secondary-information
    align-self: flex-end
    margin-bottom: 5px

  .clock
    background-color yellow-light
    border 1px solid yellow-dark

    box-shadow rgba(0, 0, 0, 0.1) -2px 3px 0

    padding 4px 10px

    font-size text-small
    font-family font-serif

    min-width 132px
